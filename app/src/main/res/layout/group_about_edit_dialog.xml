<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvBackGroupAboutPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp"
        android:drawablePadding="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:text="@string/update_page_info"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_15sdp" />

    <View
        android:id="@+id/dividers"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tvBackGroupAboutPage"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="#D3D8D9" />

    <TextView
        android:id="@+id/tvAboutHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividers"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Update description"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/groupAboutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAboutHeading"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/drwble_comment"
        android:minHeight="0dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editPageAboutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:hint="Speak your mind..."
            android:imeOptions="actionSend"
            android:inputType="textCapSentences|textMultiLine"
            android:isScrollContainer="true"

            android:textSize="@dimen/_12sdp">

            <requestFocus />
        </android.support.design.widget.TextInputEditText>

    </LinearLayout>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupAboutContainer"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:text="You can write a short summary about this page, or tell people about your products or services."
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/tvSaveDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@id/tvInfo"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/btn_round_group_outline"
        android:padding="@dimen/_5sdp"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

</RelativeLayout>