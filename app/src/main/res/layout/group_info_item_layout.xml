<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xsmall">

        <com.liker.android.Group.service.SquareImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/black"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#F7F7F7"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/containerGroupInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvGroupItemInfoCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Members: 550 | Posts: 301"
                    android:textColor="#AAB5BD" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/is_member_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_large">

                <ImageView
                    android:id="@+id/imageGroupJoin"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_group_joined_24dp"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvGroupJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/groupJoined"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
