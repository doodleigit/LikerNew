<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:orientation="vertical">




                <ImageView
                    android:id="@+id/imageVideo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imageDeleteVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/imageVideo"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:src="@drawable/ic_cancel_black_24dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageDuplicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:tint="@android:color/holo_red_light"
                android:src="@drawable/ic_warning_black_24dp"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageUnique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:tint="#1483C9"
                />


            <RelativeLayout
                android:id="@+id/selectLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5">

            </RelativeLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/imagePlayVideo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play_button" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:visibility="gone"
        android:id="@+id/tvInfoGallery"
        android:text="why?"
        android:textColor="@android:color/black"
   android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="@dimen/_5sdp"
        android:drawableRight="@drawable/ic_info_outline_black_24dp"
        android:drawableTint="#1483C9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>